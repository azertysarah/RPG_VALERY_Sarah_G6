<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="1000" prefWidth="1500" style="-fx-background-image: url('backgroundGame.png');" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ChooseHeroesController">
   <children>
      <BorderPane prefHeight="1000.0" prefWidth="1500.0">
         <top>
            <Label prefWidth="1512.0" text="Choisissez la composition de votre équipe" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Papyrus Condensed" size="70.0" />
               </font>
            </Label>
         </top>
         <center>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <AnchorPane fx:id="warriorView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="200.0" style="-fx-background-image: url('Warrior.png');" GridPane.columnIndex="0" />
                  <AnchorPane fx:id="mageView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="200.0" style="-fx-background-image: url('Mage.png');" GridPane.columnIndex="1" />
                  <AnchorPane fx:id="hunterView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="200.0" style="-fx-background-image: url('Hunter.png');" GridPane.columnIndex="2" />
                  <AnchorPane fx:id="healerView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="200.0" style="-fx-background-image: url('Healer.png');" GridPane.columnIndex="3" />
               </children>
            </GridPane>
         </center>
          <bottom>
          <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
              </rowConstraints>
              <children>
                  <Button fx:id="btnHomeScene" mnemonicParsing="false" onAction="#handleBtn" text="Retour à la page d'accueil">
                      <font>
                          <Font name="Papyrus Condensed" size="25.0" />
                      </font>
                  </Button>
                  <Button fx:id="btnConfirmScene3" mnemonicParsing="false" text="Confirmer" GridPane.columnIndex="1">
                      <font>
                          <Font name="Papyrus Condensed" size="25.0" />
                      </font>
                  </Button>
              </children>
          </GridPane>
          </bottom>
      </BorderPane>
   </children>
</AnchorPane>
